{
  "openapi": "3.0.1",
  "info": {
    "title": "Documentação CountBoxes API",
    "description": "Aqui você encontrará todas as APIs referente ao projeto CountBoxes.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/user": {
      "get": {
        "tags": [
          "/user"
        ],
        "summary": "Lista todos os usuários",
        "description": "Obtém uma lista de todos os usuários.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number",
                        "example": 1
                      },
                      "name": {
                        "type": "string",
                        "example": "John Doe"
                      },
                      "cpf": {
                        "type": "string",
                        "example": "02380747067"
                      },
                      "phone": {
                        "type": "string",
                        "example": "48984531128"
                      },
                      "type": {
                        "type": "string",
                        "example": "1"
                      },
                      "status": {
                        "type": "string",
                        "example": "A"
                      },
                      "password": {
                        "type": "string",
                        "example": "1234567"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-08-08T19:04:53.241Z"
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-08-08T19:04:53.241Z"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "/user"
        ],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário no sistema.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "cpf": {
                    "type": "string",
                    "example": "45854212030"
                  },
                  "phone": {
                    "type": "string",
                    "example": "79972471555"
                  },
                  "type": {
                    "type": "string",
                    "example": "1"
                  },
                  "status": {
                    "type": "string",
                    "example": "A"
                  },
                  "password": {
                    "type": "string",
                    "example": "1234556"
                  }
                },
                "required": ["name", "cpf", "phone", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number",
                      "example": 4
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "cpf": {
                      "type": "string",
                      "example": "45854212030"
                    },
                    "phone": {
                      "type": "string",
                      "example": "79972471555"
                    },
                    "type": {
                      "type": "string",
                      "example": "1"
                    },
                    "status": {
                      "type": "string",
                      "example": "A"
                    },
                    "password": {
                      "type": "string",
                      "example": "1234556"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-08-12T03:01:45.901Z"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-08-12T03:01:45.901Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitação inválida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Dados inválidos fornecidos"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "put": {
        "tags": [
          "/user"
        ],
        "summary": "Atualiza um usuário existente",
        "description": "Atualiza um usuário com base no ID fornecido.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            },
            "description": "ID do usuário a ser atualizado"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "phone": {
                    "type": "string",
                    "example": "79972471555"
                  },
                  "type": {
                    "type": "string",
                    "example": "4"
                  },
                  "status": {
                    "type": "string",
                    "example": "I"
                  },
                  "password": {
                    "type": "string",
                    "example": "1234556"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe da Silva"
                    },
                    "phone": {
                      "type": "string",
                      "example": "44111111111"
                    },
                    "type": {
                      "type": "string",
                      "example": "3"
                    },
                    "status": {
                      "type": "string",
                      "example": "A"
                    },
                    "password": {
                      "type": "string",
                      "example": "1234556"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-08-08T19:04:53.241Z"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-08-12T04:30:52.642Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
