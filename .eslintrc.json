{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "rules": {
        "no-console": "error",
        "no-unused-vars": "warn",
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    }
}
